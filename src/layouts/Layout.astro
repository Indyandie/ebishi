---
import '../styles/global.css'
// import { ClientRouter } from 'astro:transitions'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="overflow-y-hidden scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, height=device-height,initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <!-- IOS/Android -->
    <link rel="apple-touch-icon" sizes="192x192" href="/apple-touch-icon-192x192.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <!-- Safari 9+ -->
    <link rel="mask-icon" href="/mask-icon.svg" color="#1c7cf6">

    <!-- Chrome Android -->
    <link rel="icon" sizes="196x196" href="/shortcut-icon.png">

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- <ClientRouter /> -->
    <script is:inline>
      import 'htmx.org'
    </script>
  </head>
  <body class="m-0 h-screen overflow-y-hidden bg-[#333] font-sans" hx-boost="true">
    <slot />
  </body>
</html>
